
{{>menu}}
<div class='hero-image'>
  <button onclick='logout()'>
    Cerrar sesión
  </button>
  <div class='hero-text'>
    <h1>
      Perfil
    </h1>
    <p>
      Nombre:
      {{nombre}}
    </p>
    <p>
      Apellido:
      {{apellido}}
    </p>
    <p>
      edad:
      {{edad}}
    </p>
    <p>
      email:
      {{email}}
    </p>
    {{#if phone}}
    <p>
      Teléfono:
      {{phone}}
    </p>
    {{/if}}
  </div>
  <script>
    function logout() { api.post("/session/auth/logout"); }
  </script>
</div>